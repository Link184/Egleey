<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="host"
        android:title="Egleey host"/>

    <EditTextPreference
        android:key="port"
        android:title="Egleey port"/>

    <EditTextPreference
        android:key="email"
        android:title="Client email address" />

    <ListPreference
        android:key="interval"
        android:title="Interval between data updates"
        android:defaultValue="5000"
        android:summary="%s"
        android:entries="@array/intervalsEntries"
        android:entryValues="@array/intervalsValues"/>

</PreferenceScreen>